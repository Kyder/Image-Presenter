{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Image Presenter",
  "version": "1.1.25",
  "identifier": "com.yourcompany.imagepresenter",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "node build-prepare.js",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.ico"
    ],
    "resources": {
      "../web": "web"
    }
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' http://asset.localhost asset: data: blob:; media-src 'self' http://asset.localhost asset: data: blob:; font-src 'self' data:;",
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": [
            "$APPDATA/**",
            "$RESOURCE/**",
            "$EXE/../**",
            "$EXE/**",
            "**"
          ],
          "deny": []
        }
      }
    },
    "windows": [
      {
        "fullscreen": true,
        "resizable": true,
        "title": "Digital Signage Display",
        "width": 1920,
        "height": 1080,
        "decorations": true,
        "label": "main",
        "url": "index.html",
        "devtools": true
      }
    ]
  },
  "plugins": {}
}